<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show", task %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Destroy", task, method: :delete, data: {confirm: 'Are you sure?' } %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
